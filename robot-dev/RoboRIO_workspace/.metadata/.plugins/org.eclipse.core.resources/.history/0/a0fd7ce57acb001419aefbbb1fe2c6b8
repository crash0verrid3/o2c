					SetControls=2,
					Wait4=3,
					MoveTo=4,
					MoveRelative=5,
					TurnTo=6,
					TurnRelative=7,
					ToteWheels=8,
					ToteArms=9,
					ToteLift=10,
					ClawArm = 11,
					Pincer=12
		} AutoAction;


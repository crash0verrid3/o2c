					LandB3rd =		15,	// take Center tote to the landmark after 10 sec
					LandC3rd =		16,	// take Left tote to the landmark after 10 sec


					XLandA1st =		17,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandB1st =		18,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandC1st =		19,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandA2nd =		20,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandB2nd =		21,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandC2nd =		22,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandAB2nd =	23,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandBC2nd =	24,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandA3rd =		25,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandB3rd =		26,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					XLandC3rd =		27,	// take our bin and tote to the autozone and stack tote on landmark after 10 sec
					MockBox =		28,
					Test =			29,
					Demo =			30
		}	AutoScenario;

		/*
		 * ToDo:
		 * 		Add a Label command for branch control
